<div class="container center">
    <h1>Login or Signup</h1>
    <button data-target="loginModal" class="btn waves-effect waves-light">
    <i class="material-icons left">account_circle</i>Login</button>
    <button data-target="signupModal" class="btn waves-effect waves-light">
    <i class="material-icons left">account_circle</i>Signup</button>
</div>

<div id="loginModal" class="modal">
    <div class="modal-content">
      <div class="row">
          <form class="col s12">
              <div class="row">
                  <div class="input-field col s12">
                      <input id="email" type="email" class="validate">
                      <label for="email" data-error="Please enter a valid email" data-success="right">Email</label>
                  </div>
              </div>
              <div class="row">
                  <div class="input-field col s12">
                      <input id="password" type="password" class="validate">
                      <label for="password">Password</label>
                  </div>
              </div>
              <div class="modal-footer">
                  <a href="#!" class="modal-action modal-close waves-effect waves-green btn"
                  type="submit"><i class="material-icons left">input</i>Submit</a>
              </div>
          </form>
      </div>
    </div>
</div>

<div id="signupModal" class="modal">
    <div class="modal-content">
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s6">
                        <input placeholder="First Name" id="first_name" type="text" class="validate">
                        <label for="first_name">First Name</label>
                    </div>
                    <div class="input-field col s6">
                        <input placeholder="Last Name" id="last_name" type="text" class="validate">
                        <label for="last_name">Last Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" class="validate">
                        <label for="email" data-error="Please enter a valid email" data-success="right">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" class="validate">
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#!" class="modal-action modal-close waves-effect waves-green btn"
                    type="submit"><i class="material-icons left">input</i>Submit</a>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/login.js" charset="utf-8"></script>
