{{#each blogs}}

<article>
  <div class="container">
    <div class="row">
      <div class="col s12 l4">
          <img class ="blogImg responsive-img" src="{{this.image}}">
      </div>
      <div class = "col l4">
          {{this.title}}
      </div>
        <p class = blogDate>{{toDate this.created}}</p>

        <p>{{toSubstring this.body}}</p>
        <a href="/blogs/{{this._id}}">Read More</a>\
      </div>
        <hr>
    </div>
</article>



