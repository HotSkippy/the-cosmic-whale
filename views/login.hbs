    <h1>Login or Signup</h1>
    <button data-target="loginModal" class="btn waves-effect waves-light">
    <i class="material-icons left">account_circle</i>Login</button>
    <button data-target="signupModal" class="btn waves-effect waves-light">
    <i class="material-icons left">account_circle</i>Signup</button>
</div>

<div id="loginModal" class="modal">
    <div>
        <a class="btn-floating btn-small waves-effect waves-light red right exit modal-action modal-close">
            <i class="material-icons">eject</i></a>
    </div>
    <div class="modal-content">
        <div class="row">
            <form class="col s12" action="/auth/login" method="post">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" name="email" class="validate" required="true">
                        <label for="email" data-error="Please enter a valid email" data-success="Welcome!">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" name="password" class="validate" required="true">
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="submitLogin" class="modal-action modal-close waves-effect waves-green btn" type="submit"><i class="material-icons left">input</i>Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="signupModal" class="modal">
    <div>
        <a class="btn-floating btn-small waves-effect waves-light red right exit modal-action modal-close">
            <i class="material-icons">eject</i></a>
    </div>
    <div class="modal-content">
        <div class="row">
            <form class="col s12" id="signupForm" action="/auth/signup" method="post">
                <div class="row">
                    <div class="input-field col s6">
                        <input placeholder="First Name" id="firstName" name="firstName" type="text" class="validate" required="true">
                        <label for="firstName">First Name</label>
                    </div>
                    <div class="input-field col s6">
                        <input placeholder="Last Name" id="lastName" name="lastName" type="text" class="validate" required="true">
                        <label for="lastName">Last Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" name="email" class="validate" required="true">
                        <label for="email" data-error="Please enter a valid email" data-success="right">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" name="password" class="validate" required="true">
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="submitSignup" class="waves-effect waves-green btn" type="submit"><i class="material-icons left">input</i>Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/login.js" charset="utf-8"></script>
